<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="183dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/film_layout_bg">


    <ImageView
        android:id="@+id/film_img"
        android:layout_width="122dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/film_layout_name"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineHeight="28dp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/film_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/film_layout_overview"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineHeight="20dp"
        android:maxHeight="60dp"
        android:maxLines="3"
        android:textColor="@color/black_with_alpha"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/film_img"
        app:layout_constraintTop_toBottomOf="@+id/film_layout_name" />

    <ImageView
        android:id="@+id/film_layout_calendar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/calendar_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/film_img" />

    <TextView
        android:id="@+id/film_layout_date"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-medium"
        android:lineHeight="16.41dp"
        android:textColor="@color/black_with_alpha"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/film_layout_calendar_icon"
        app:layout_constraintStart_toEndOf="@+id/film_layout_calendar_icon"
        app:layout_constraintTop_toTopOf="@+id/film_layout_calendar_icon" />

    <ImageView
        android:id="@+id/film_layout_heart_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
